<Window x:Class="CorelDRAW_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CorelDRAW_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="ProcessExcelFile" Content="Process Excel file" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="140" Height="30" Click="ProcessExcelFile_Click"/>
        <Button Name="ProcessCorelDRAWFile" Content="Process CorelDRAW file" HorizontalAlignment="Left" Margin="20,70,0,0" VerticalAlignment="Top" Width="140" Height="30" Click="ProcessCorelDRAWFile_Click"/>
        <TextBlock Name="OutputText" HorizontalAlignment="Stretch" Margin="180,20,20,20" TextWrapping="Wrap" Text="" VerticalAlignment="Top" MinHeight="130" MaxHeight="900" Width="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="Test" Content="Test" HorizontalAlignment="Left" Margin="20,120,0,0" VerticalAlignment="Top" Width="140" Height="30" Click="Test_ClickAsync"/>
        <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="20,170,0,0" VerticalAlignment="Top" Width="140" Height="30" Click="Cancel_Click"/>
    </Grid>
</Window>
